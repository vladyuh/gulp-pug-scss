extends layouts/default
include helpers/mixins
include ../blocks/components/form/form.pug


block variables
	- const title = "gulp-pug-starter"

block content
	//section.firstBlock
		.container
			form(action="#", style="max-width: 400px")
				+input('text','Введите ваше имя','Имя', true)
				+input('tel','Введите ваш телефон','Телефон', true)
				+select('Выберите','Город',['Выберите','Минск','Могилев'])
				+textarea('Введите сообщение','Сообщение', false)
				+submit('Отправить заявку')
	

block scripts
	script(src="js/main.js")
	script(src="js/vendor.js")
